#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>

int main() {

    int n;
    printf("원하는 수를 입력하시오\n");
    scanf("%d", &n);
    printf("\n");

    for (int k = 1; k < (2 * n + 1); k++) {

        for (int j = 1; j < (2 * n - k + 1); j++)
        {
            printf(" ");
        }
        for (int i = 1; i < (2 * k); i++)
        {
            printf("*");
        }
        printf("\n");
    }

    printf("\n\n\n");


    for (int k = 2 * n; k > 0; k--) {

        for (int j = 1; j < (2 * n - k + 2); j++)
        {
            printf(" ");
        }
        for (int i = 1; i < (2 * k - 2); i++)
        {
            printf("*");
        }
        printf("\n");
    }


    for (int k = 1; k < (n + 1); k++) {

        for (int j = 1; j < (n - k + 1); j++)
        {
            printf(" ");
        }
        for (int i = 1; i < (2 * k); i++)
        {
            printf("*");
        }
        printf("\n");
    }

    for (int k = n; k > 0; k--) {

        for (int j = 1; j < (n - k + 2); j++)
        {
            printf(" ");
        }
        for (int i = 1; i < (2 * k - 2); i++)
        {
            printf("*");
        }
        printf("\n");
    }
    return 0;
}
